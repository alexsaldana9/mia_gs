
<p id="notice"><%= notice %></p>

<h1>MIA - Garage Sale </h1>

<table table class="table table-striped">
  <thead>
    <tr>
      <th>Item Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <!--<td><%= item.price %></td>-->
        <td class="price">$ <%= '%.2f' %  item.price %></td>
        <td><%= item.category %></td>
        <td>
          <img class="card-img-top">
          <%= image_tag item.image %>
        </td>
        <td>
          <div id="contact" >
            <a href="contact/email">I'm interedted - send me more info</a>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<%= link_to 'New Item', new_item_path %>

